{
    "name" : "sjorek/unicode-normalization",
    "description" : "An enhanced facade to existing unicode-normalization implementations.",
    "homepage" : "https://sjorek.github.io/unicode-normalization/",
    "license" : "BSD-3-Clause",
    "authors": [
        {
            "name": "Stephan Jorek",
            "email": "stephan.jorek@gmail.com"
        }
    ],
    "type" : "library",
    "keywords" : [
        "stream",
        "stream-filter",
        "unicode",
        "normalization",
        "utf8",
        "nfc",
        "nfd",
        "nfkc",
        "nfkd"
    ],
    "autoload" : {
        "psr-4" : {
            "Sjorek\\UnicodeNormalization\\" : "src/UnicodeNormalization"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev" : {
        "psr-4" : {
            "Sjorek\\UnicodeNormalization\\Tests\\" : "tests/UnicodeNormalization/Tests"
        },
        "files": [
            "tests/bootstrap.php"
        ]
    },
    "require" : {
        "php": ">=7.0",
        "symfony/filesystem": "^3.4"
    },
    "require-dev" : {
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-zlib": "*",
        "friendsofphp/php-cs-fixer": "^2.7",
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^6.5",
        "sensiolabs/security-checker": "^4.1"
    },
    "replace" : {
        "sjorek/unicode-normalization-stream-filter" : "*"
    },
    "repositories": [
        {
            "type" : "path",
            "url" : "tests/UnicodeNormalization/Tests/Fixtures/Packages/*Implementation"
        }
    ],
    "suggest" : {
        "ext-iconv" : "Eventually enables a special unicode-normalization mode for HFS+ filesystems (NFD_MAC), if the 'iconv' extension supports the 'utf-8-mac' charset.",
        "ext-intl" : "For best performance, but please consider 'sjorek/unicode-normalization-native-implementation' package instead.",
        "ext-mbstring" : "For best performance, but please consider 'sjorek/unicode-normalization-native-implementation' package instead.",
        "symfony/polyfill-intl-normalizer": "For compatibility, if one of the above php extensions is not available and the 'patchwork/utf8' package is not suiteable.",
        "symfony/polyfill-mbstring": "For compatibility, if one of the above php extensions is not available and the 'patchwork/utf8' package is not suiteable.",
        "patchwork/utf8": "For compatibility, if one of the above php extensions is not available and the 'symfony/polyfill-*' packages are not suiteable."
    },
    "config": {
        "process-timeout": 900
    },
    "scripts": {
        "run:build": [
            "@run:clean",
            "@run:security-check",
            "@run:cs-lint",
            "@run:coverage"
        ],
        "run:clean": [
            "[ -d coverage ] && rm -r coverage || true",
            "@run:remove-implementation-packages"
        ],
        "run:test": [
            "@run:require-native-implementation",
            "phpunit -v --exclude-group=symfony --exclude-group=patchwork --exclude-group=large",
            "@run:require-symfony-implementation",
            "phpunit -v --group=symfony --exclude-group=large",
            "@run:require-patchwork-implementation",
            "phpunit -v --group=patchwork --exclude-group=large",
            "@run:remove-implementation-packages"
         ],
        "run:test-all": [
            "@run:require-native-implementation",
            "phpunit -v --exclude-group=symfony --exclude-group=patchwork",
            "@run:require-symfony-implementation",
            "phpunit -v --group=symfony",
            "@run:require-patchwork-implementation",
            "phpunit -v --group=patchwork",
            "@run:remove-implementation-packages"
        ],
        "run:test-large": [
            "@run:require-native-implementation",
            "phpunit -v --group=large",
            "@run:require-symfony-implementation",
            "phpunit -v --group=large",
            "@run:require-patchwork-implementation",
            "phpunit -v --group=large",
            "@run:remove-implementation-packages"
        ],
        "run:test-conformance": [
            "@run:require-native-implementation",
            "phpunit -v --group=conformance",
            "@run:require-symfony-implementation",
            "phpunit -v --group=conformance",
            "@run:require-patchwork-implementation",
            "phpunit -v --group=conformance",
            "@run:remove-implementation-packages"
        ],
        "run:test-coverage": [
            "@run:require-native-implementation",
            "phpunit -v --exclude-group=symfony --exclude-group=patchwork --exclude-group=large --coverage-text",
            "@run:remove-implementation-packages"
        ],
        "run:test-all-coverage": [
            "@run:require-native-implementation",
            "phpunit -v --exclude-group=symfony --exclude-group=patchwork --coverage-text",
            "@run:remove-implementation-packages"
        ],
        "run:coverage": [
            "@run:require-native-implementation",
            "phpunit -v --exclude-group=large --coverage-html coverage",
            "@run:remove-implementation-packages"
        ],
        "run:cs-lint": [
            "php-cs-fixer fix --diff --stop-on-violation --verbose --dry-run"
        ],
        "run:cs-fix": [
            "php-cs-fixer fix -vv || true"
        ],
        "run:security-check": [
            "security-checker security:check --ansi"
        ],
        "run:security-check-bugfix-for-travis": [
            "security-checker security:check --ansi --end-point=http://security.sensiolabs.org/check_lock"
        ],
        "run:normalization-test-fixtures-update-check": [
            "@php build/scripts/updateNormalizationTestFixtures.php --check --verbose"
        ],
        "run:normalization-test-fixtures-update": [
            "@php build/scripts/updateNormalizationTestFixtures.php"
        ],
        "run:require-native-implementation": [
            "@run:remove-implementation-packages",
            "@composer require --optimize-autoloader --no-interaction --no-progress sjorek/unicode-normalization-native-implementation:@dev"
        ],
        "run:require-symfony-implementation": [
            "@run:remove-implementation-packages",
            "@composer require --optimize-autoloader --no-interaction --no-progress sjorek/unicode-normalization-symfony-implementation:@dev"
        ],
        "run:require-patchwork-implementation": [
            "@run:remove-implementation-packages",
            "@composer require --optimize-autoloader --no-interaction --no-progress sjorek/unicode-normalization-patchwork-implementation:@dev"
        ],
        "run:remove-implementation-packages": [
            "@composer remove --optimize-autoloader --no-interaction sjorek/unicode-normalization-native-implementation sjorek/unicode-normalization-symfony-implementation sjorek/unicode-normalization-patchwork-implementation"
        ],
        "run:venv": [
            "@run:venv-remove",
            "@run:venv-deploy"
        ],
        "run:venv-deploy": [
            "@composer venv:shell -v --lock",
            "@composer venv:shell-hook -v --lock",
            "@composer venv:link -v --lock",
            "@composer venv:git-hook -v --lock"
        ],
        "run:venv-remove": [
            "@composer venv:shell -v --remove",
            "@composer venv:shell-hook -v --remove",
            "@composer venv:link -v --remove",
            "@composer venv:git-hook -v --remove"
        ]
    }
}
